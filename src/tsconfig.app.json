{
  "compilerOptions": {
    "baseUrl": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "declaration": true,
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "stripInternal": false,
    "paths": {
      "@angular/material": [
        "../node_modules/@angular/material"
      ]
    }
  },
  "exclude": [
    "*-aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}

